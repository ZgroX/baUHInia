<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <!--    <pl.ioad1.bauhinia.menu.Login.Login-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:onClick="loginButtonOnClick"
            android:text="@string/login" />

        <Button
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:onClick="settingButtonOnClick"
            android:text="@string/settings" />

        <Button
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:onClick="showMapListsButtonOnClick"
            android:text="@string/open_map_lists" />

        <Button
            android:id="@+id/elementEditorButton"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:onClick="showElementEditorButtonOnClick"
            android:text="@string/open_element_editor" />


    </LinearLayout>



</RelativeLayout>