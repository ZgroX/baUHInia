<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/map_template_list_item_name_textview"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/titles"
        android:paddingTop="5dp"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/map_template_list_item_district_textview"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_template_list_item_name_textview"
        android:textSize="16sp"
        android:textColor="@color/titles"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/map_template_list_item_max_budget_textview"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_template_list_item_district_textview"
        android:textSize="16sp"
        android:textColor="@color/titles"
        android:paddingBottom="5dp"
        android:paddingStart="10dp" />

    <ImageButton
        android:id="@+id/editTemplateBtn"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/moreInfosTemplateBtn"
        android:background="@color/background_color"/>

    <ImageButton
        android:id="@+id/moreInfosTemplateBtn"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/deleteTemplateBtn"
        android:background="@color/background_color"
        app:srcCompat="@android:drawable/ic_info" />

    <ImageButton
        android:id="@+id/deleteTemplateBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:background="@color/background_color"/>

</RelativeLayout>